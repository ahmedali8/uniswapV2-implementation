{
  "name": "@ahmedali8/hardhat-ts-template",
  "description": "Starter kit for writing Solidity smart contracts in hardhat environment",
  "version": "0.1.0",
  "author": {
    "name": "Ahmed Ali Bhatti",
    "url": "https://github.com/ahmedali8"
  },
  "scripts": {
    "chain": "hardhat node --no-deploy --export-all ./generated/chain.json --network hardhat",
    "clean": "shx rm -rf ./artifacts ./cache ./coverage ./coverage.json ./src/types/* && yarn typechain",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "deploy:hardhat-deploy": "hardhat deploy --export-all ./deployments/hardhat_contracts.json",
    "deploy": "yarn deploy:hardhat-deploy --network hardhat",
    "deploy:network": "yarn deploy:hardhat-deploy --network",
    "dodoc": "hardhat dodoc",
    "fork": "hardhat node --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
    "networks": "hardhat networks",
    "postinstall": "husky install && DOTENV_CONFIG_PATH=./.env.example yarn typechain",
    "prettier": "prettier --config ./.prettierrc.yml --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
    "size": "hardhat size-contracts",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true CONTRACT_SIZER=true hardhat test",
    "test:trace": "hardhat test --trace",
    "test:fulltrace": "hardhat test --fulltrace",
    "typechain:uniswap-core": "typechain --target ethers-v5 --out-dir src/types './node_modules/@uniswap/v2-core/build/?(IUniswapV2Callee.json|IUniswapV2ERC20.json|IUniswapV2Factory.json|IUniswapV2Pair.json|UniswapV2Factory.json|UniswapV2Pair.json|UniswapV2ERC20.json)'",
    "typechain:uniswap-periphery": "typechain --target ethers-v5 --out-dir src/types './node_modules/@uniswap/v2-periphery/build/?(IUniswapV2Router02.json|UniswapV2Router02.json|WETH9.json|IWETH.json)'",
    "typechain:uniswap": "yarn typechain:uniswap-core && yarn typechain:uniswap-periphery",
    "typechain": "yarn typechain:uniswap && cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "verify": "hardhat run scripts/verify.ts --network"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/constants": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/logger": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@ethersproject/solidity": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "@ethersproject/units": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@ethersproject/wordlists": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "4.7.3",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@uniswap/v2-core": "^1.0.1",
    "chai": "4.3.6",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "5.7.1",
    "evm-bn": "^1.1.2",
    "from-exponential": "^1.1.1",
    "fs-extra": "^10.1.0",
    "hardhat": "2.11.1",
    "hardhat-contract-sizer": "2.6.1",
    "hardhat-deploy": "^0.11.15",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-storage-layout": "^0.1.6",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "shx": "0.3.4",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.3",
    "uniswap-v2-deploy-plugin": "^0.0.4"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "UNLICENSED",
  "private": true,
  "packageManager": "yarn@3.2.0"
}
